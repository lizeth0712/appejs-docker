<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/css/coordinador.css" />
  <link rel="icon" type="image/png" href="/img/cofilogo.ico">

  <title>Coordinador</title>
</head>
<body>
  <!-- NAVBAR -->
  <nav class="navbar navbar-dark">
    <div class="containerNavBar">
        <a href="#" class="navbar-brand">
            <img src="img/logo.png" alt="Coficab Logo" width="120">
        </a>
        <div>
          <span>Hello, <%= nombre %></span>

            <a href="/logout">LOGOUT</a>
        </div>
    </div>
  </nav>
  <div class="container">
    <!-- Barra lateral -->
    <aside class="sidebar">
      <h2>Details</h2>
    
      <!-- Buscador -->
      <form class="search-group" method="GET" action="/coordinador">
        <input type="text" name="buscar" placeholder="Search by ID or name..." />
        <button type="submit">Search</button>
      </form>
      
    
      <!-- Lista dinámica de solicitudes -->
      <ul class="requests">
        <% solicitudes.forEach(item => { %>
          <li>
            <a href="/coordinador?id=<%= item.ID %>">
              TR-<%= item.ID %><br />
              <small>Rec. Date: <%= item.fecha_creacion.toLocaleDateString() %></small>
            </a>
          </li>
        <% }) %>
      </ul>
    </aside>
    
    
    
    <!-- Main -->
    <main class="content">
      <% if (seleccionada) { %>
        <section class="general-info">
          <h2>General information</h2>
          <div class="info-grid">
            <div><strong>Test Request name:</strong> TR-<%= seleccionada.ID %></div>
            <div><strong>Plant:</strong> <%= seleccionada.planta %></div>
            <div><strong>Requestor ID:</strong> <%= seleccionada.solicitante %></div>
            <div><strong>Requested Date:</strong> <%= seleccionada.fecha_creacion.toLocaleString() %></div>
            <div><strong>Status:</strong> <%= seleccionada.estatus.toUpperCase() %></div>
          </div>
        </section>
    
        <section class="wire-info">
          <h3>Wire information</h3>
          <div class="goal">Goal of the test request: <strong><%= seleccionada.meta %></strong></div>
          <div class="wire-grid">
            <div><strong>Family:</strong> <%= seleccionada.familia %></div>
            <div><strong>Cross section:</strong> <%= seleccionada.calibre %></div>
            <div><strong>Color:</strong> <%= seleccionada.color %></div>
          </div>
        </section>
    
        <section class="standard">
          <h3>Standard</h3>
          <div><%= seleccionada.standar %></div>
        </section>
    
        <section class="test">
          <h3>Test</h3>
          <div><%= seleccionada.tipo_prueba %></div>
        </section>
        <br>
        <% if (mensaje) { %>
          <div class="mensaje-exito">
            <%= mensaje %>
          </div>
        <% } %>
        <!-- Botones para cambiar estatus -->
        <section class="estatus-update">
          <form action="/coordinador/estatus/<%= seleccionada.ID %>" method="POST" class="status-form">
            <button type="submit" name="estatus" value="aprobado" class="buttonA">Approved</button>
            <button type="submit" name="estatus" value="rechazado" class="buttonR">Decline</button>
          </form>
        </section>
        <section class="tecnico">
          <h3>Technician</h3>
          <form action="/coordinador/asignar/<%= seleccionada.ID %>" method="POST">
            <select name="tecnico_id" required>
              <option value="">Selecciona un técnico</option>
              <% tecnicos.forEach(t => { %>
                <option value="<%= t.ID %>" <%= seleccionada.tecnico_id === t.ID ? 'selected' : '' %>>
                  <%= t.nombre %>
                </option>
              <% }) %>
            </select>
            <button type="submit">Asignar</button>
          </form>
        </section>
        
      <% } else { %>
        <p style="padding: 2rem;">Select a request to view details.</p>
      <% } %>
    </main>
    
    
  </div>
</body>
</html>
