<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - Coficab</title>
    <link rel="icon" type="image/png" href="/img/cofilogo.ico">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
        }
        .navbar {
            background-color: #ffffff;
            padding: 10px;
            border-top: 35px solid #001f5b; 
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1); 
        }
        .navbar a {
            color: white;
            text-decoration: none;
        }
        .container-login {
            max-width: 400px;
            margin: auto;
            margin-top: 50px;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 8px;
            background-color: #f9f9f9;
        }
        .btn-primary {
            width: 100%;
        }
    </style>
</head>
<body>
    
    <!-- NAVBAR -->
    <nav class="navbar navbar-dark">
        <div class="container">
            <a href="#" class="navbar-brand">
                <img src="img/logo.png" alt="Coficab Logo" width="120">
            </a>
            <div>
                <a href="#" style="color: #001f5b;">About us</a>
            </div>
        </div>
    </nav>

    <!-- LOGIN FORM -->
    <div class="container-login">
        <h3 class="text-center">Login</h3>
        <form action="/login" method="POST">
            <div class="mb-3">
                <label for="userType" class="form-label">User Type</label>
                <select class="form-select" id="userType" name="userType" required>
                    <option value="cliente">Client</option>
                    <option value="coordinador">Coordinator</option>
                    <option value="tecnico">Technician</option>
                </select>
            </div>
            <div class="mb-3">
                <label for="username" class="form-label">User Name</label>
                <input type="text" class="form-control" id="username" name="username" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control" id="password" name="password" required>
            </div>
            <% if (error) { %>
                <div class="alert alert-danger text-center" role="alert">
                  <%= error %>
                </div>
              <% } %>
              
            <button type="submit" class="btn btn-primary">Login</button>
        </form>
    </div>
    <script>
        const errorBox = document.querySelector('.alert');
      
        if (errorBox) {
          setTimeout(() => {
            // Redireccionar al mismo login limpio
            window.location.href = "/";
          }, 3000);
        }
      </script>
      
</body>
</html>
